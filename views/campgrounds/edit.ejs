<% layout('layouts/boilerplate') %>
<div class="container my-5">
    <div class="row">
        <h1 class="text-center mb-4">Edit Campground</h1>
        <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post" novalidate class="needs-validation">
                
                <!-- Title Input -->
                <div class="mb-3">
                    <label class="form-label" for="title">Title:</label>
                    <input class="form-control" type="text" name="campground[title]" value="<%= campground.title %>" id="title" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please enter a title.</div>
                </div>

                <!-- Location Input -->
                <div class="mb-3">
                    <label class="form-label" for="location">Location:</label>
                    <input class="form-control" type="text" name="campground[location]" value="<%= campground.location %>" id="location" required>
                    <div class="valid-feedback">Done!</div>
                    <div class="invalid-feedback">Please provide a location.</div>
                </div>

                <!-- Image URL Input -->
                <div class="mb-3">
                    <label class="form-label" for="image">Image URL:</label>
                    <input class="form-control" type="url" name="campground[image]" value="<%= campground.image %>" id="image" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please provide a valid image URL.</div>
                </div>

                <!-- Description Textarea -->
                <div class="mb-3">
                    <label class="form-label" for="description">Description:</label>
                    <textarea class="form-control" name="campground[description]" id="description" rows="3" required><%= campground.description %></textarea>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please enter a description.</div>
                </div>

                <!-- Price Input -->
                <div class="mb-3">
                    <label class="form-label" for="price">Price:</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="number" class="form-control" id="price" name="campground[price]" value="<%= campground.price %>" aria-label="Amount (to the nearest dollar)" required>
                        <span class="input-group-text">.00</span>
                        <div class="valid-feedback">Done!</div>
                        <div class="invalid-feedback">Please enter a price.</div>
                    </div>
                </div>

                <!-- Save Button -->
                <button type="submit" class="btn btn-success w-100">Save Changes</button>
            </form>

            <!-- Back Link -->
            <div class="text-center mt-3">
                <a href="/campgrounds/<%= campground._id %>" class="btn btn-secondary">Back to Campground</a>
            </div>
        </div>
    </div>
</div>
